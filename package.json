{
  "name": "hyper-forge-cli",
  "version": "0.1.2",
  "description": "CLI used to run your forge in the hyper forge ecosystem",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc && tsc-alias",
    "rebuild": "rm -rf dist && npm install && npm run build",
    "watch": "nodemon --watch src --ext * --exec npm run build",
    "prepack": "npm run rebuild",
    "prepublishOnly": "npm run rebuild"
  },
  "keywords": [
    "cli",
    "file",
    "hyper",
    "forge",
    "project",
    "tooling",
    "template",
    "scaffolding"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bh-schmidt/hyper-forge-cli"
  },
  "bugs": {
    "url": "https://github.com/bh-schmidt/hyper-forge-cli/issues"
  },
  "homepage": "https://github.com/bh-schmidt/hyper-forge-cli#readme",
  "license": "MIT",
  "type": "module",
  "bin": {
    "hf": "./dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "devDependencies": {
    "@types/execa": "^0.9.0",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.17",
    "@types/prompts": "^2.4.9",
    "@types/proper-lockfile": "^4.1.4",
    "nodemon": "^3.1.9",
    "tsc-alias": "^1.8.13",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "execa": "^9.5.2",
    "fly-import": "^0.4.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "hyper-forge": "^0.1.3",
    "lodash": "^4.17.21",
    "prompts": "^2.4.2",
    "proper-lockfile": "^4.1.2"
  }
}
